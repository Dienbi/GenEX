# Environment Variables Template
# Copy this file to .env and fill in the values for local development with PostgreSQL

# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (leave empty to use SQLite, fill for PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/genex

# API Keys
GROQ_API_KEY=your-groq-api-key-here

# Site Configuration
SITE_URL=http://127.0.0.1:8000

# Production Only (Set these on Render)
# RENDER=True
# RENDER_EXTERNAL_HOSTNAME=your-app.onrender.com
